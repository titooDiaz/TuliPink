<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6F5">

    <!-- Header title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuraciones!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Top right pink circle -->
    <View
        android:id="@+id/pinkCircle"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/pink_circle"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"/>

    <!-- Expenses card -->
    <!-- Card de Gastos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardExpenses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stateListAnimator="@animator/card_press_anim">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:background="@drawable/red_card_bg">

            <!-- Header con icono SVG -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <!-- Icono SVG de gastos -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:background="@drawable/icon_circle_bg_red"
                    android:src="@drawable/ic_expenses_svg"
                    android:contentDescription="Gastos"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tus gastos más comunes"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:letterSpacing="0.01"/>

            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Evita explicar cada vez. Añade tus gastos más frecuentes para seleccionarlos rápidamente."
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#66000000"/>

            <!-- Decoración SVG inferior -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:alpha="0.15"
                android:src="@drawable/ic_wallet_pattern_svg"
                android:contentDescription="Decoración"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card de Ingresos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/cardExpenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stateListAnimator="@animator/card_press_anim">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:background="@drawable/green_card_bg">

            <!-- Header con icono SVG -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <!-- Icono SVG de ingresos -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:background="@drawable/icon_circle_bg_green"
                    android:src="@drawable/ic_income_svg"
                    android:contentDescription="Ingresos"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tus ingresos más comunes"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:letterSpacing="0.01"/>

            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Evita explicar cada vez. Añade tus ingresos más frecuentes para seleccionarlos rápidamente."
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#66000000"/>

            <!-- Decoración SVG inferior -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:alpha="0.15"
                android:src="@drawable/ic_money_pattern_svg"
                android:contentDescription="Decoración"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>